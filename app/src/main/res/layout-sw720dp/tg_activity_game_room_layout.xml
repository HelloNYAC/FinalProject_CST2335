<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:style="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/tg_progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <GridLayout
        android:id="@+id/qus_sum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tg_progressBar"
        android:columnCount="2"
        android:rowCount="3"
        android:background="#CAA1A1">

        <TextView
            android:id="@+id/qus_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tg_select_q_number"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:textSize="15dp"
            android:layout_row="0"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/q_n_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/qus_typ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tg_select_q_type"
            android:textSize="15dp"
            android:layout_row="1"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/q_t_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/qus_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tg_select_q_level"
            android:textSize="15dp"
            android:layout_row="2"
            android:layout_column="0"/>
        <EditText
            android:id="@+id/q_l_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_row="2"
            android:layout_column="1"/>
    </GridLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qus_sum">

        <ListView
            android:id="@+id/tg_thelistview"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/tg_fragmentLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#7FB584F1"
            android:layout_toRightOf="@id/tg_thelistview"/>

    </RelativeLayout>

</RelativeLayout>