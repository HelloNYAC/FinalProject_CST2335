<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerlayout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finalproject_cst2335.car.CarMainActivity">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/reletivelayoutone"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <TextView
            android:layout_marginTop="50dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/CovidTitile"
            android:background="@android:color/white"
            android:textColor="#417C6D"
            android:text="Find a car"
            android:textSize="36sp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />


        <TextView
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:layout_below="@id/CovidTitile"
            android:id="@+id/SearchByCountry"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by Model"
            android:gravity="center"
            android:inputType="text"
            android:textSize="30sp"
            />

        <EditText
            android:layout_below="@id/SearchByCountry"
            android:layout_margin="10dp"
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter car Model"
            />

        <TextView
            android:layout_below="@id/country_name"
            android:layout_margin="15dp"
            android:id="@+id/last_country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_search"
            />
        <TextView
            android:layout_below="@id/last_country_name"
            android:layout_margin="10dp"
            android:gravity="center"
            android:id="@+id/last_country_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/last_search"
            />

        <Button
            android:layout_margin="10dp"
            android:id="@+id/search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/search"/>




    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/toreplace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_height="match_parent"
            android:layout_width="match_parent" />
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        style="@style/NavigationDrawerStyle"
        android:theme="@style/NavigationDrawerStyle"
        app:headerLayout="@layout/nav_header_main"
        android:id="@+id/side_navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer"

        />
</androidx.drawerlayout.widget.DrawerLayout>