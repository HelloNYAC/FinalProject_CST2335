<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

        <RelativeLayout
            android:id="@+id/song_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/song_item_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:text="i am id "
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/Song_detail_Songtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/song_item_id"
                    android:text="i am song title"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/song_artistname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Song_detail_Songtitle"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="272dp"
                    android:layout_marginTop="0dp"
                    android:text="i am artistname"
                    android:textSize="12sp"
                    android:textStyle="italic" />
        </RelativeLayout>

</RelativeLayout>