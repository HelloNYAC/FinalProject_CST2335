<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finalproject_cst2335.HomePage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/home_tb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary" />

        <ImageView
            android:id="@+id/hmimgtivia"
            android:layout_width="154dp"
            android:layout_height="134dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="176dp"
            android:src="@drawable/hmtrivia" />

        <ImageView
            android:id="@+id/hmimgsoccer"
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:layout_alignParentTop="true"

            android:layout_marginLeft="11dp"
            android:layout_marginTop="172dp"
            android:layout_toRightOf="@+id/hmimgtivia"
            android:src="@drawable/hmsoccer" />

        <ImageView
            android:id="@+id/hmimgcar"
            android:layout_width="153dp"
            android:layout_height="143dp"
            android:layout_below="@+id/hmimgtivia"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="35dp"
            android:src="@drawable/hmcar" />

        <ImageView
            android:id="@+id/hmimgsong"
            android:layout_width="115dp"
            android:layout_height="132dp"
            android:layout_below="@+id/hmimgsoccer"
            android:layout_marginLeft="13dp"


            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/hmimgcar"
            android:src="@drawable/hmsongsterr" />


    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/hp_nav_view_header"
        app:menu="@menu/nav_view_items">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>