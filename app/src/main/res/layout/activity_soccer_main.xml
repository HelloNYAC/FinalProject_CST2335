<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sc_main_background"
    tools:context=".soccergames.SoccerMainActivity">

    <TextView
        android:id="@+id/sc_main_title"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:textColor="@color/white"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center"
        android:text="@string/sc_main_title" />

    <Button
        android:id="@+id/sc_go_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="casual"
        android:layout_below="@id/sc_main_title"
        android:text="@string/sc_goal"/>

</RelativeLayout>