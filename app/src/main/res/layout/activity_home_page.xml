<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerL"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.finalproject_cst2335.HomePage">


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/home_tb"
                android:background="@color/design_default_color_primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="140dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/hmimgtivia"
        android:src="@drawable/hmtrivia"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:layout_marginTop="180dp"
            android:src="@drawable/hmsoccer"
            android:id="@+id/hmimgsoccer"
            android:layout_toRightOf="@+id/hmimgtivia"/>

        <ImageView
            android:id="@+id/hmimgcar"
            android:layout_width="142dp"
            android:layout_height="141dp"
            android:layout_below="@+id/hmimgtivia"
            android:layout_marginLeft="50dp"
            android:src="@drawable/hmcar" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="140dp"
            android:id="@+id/hmimgsong"
            android:layout_toRightOf="@+id/hmimgcar"
            android:layout_below="@+id/hmimgsoccer"
            android:src="@drawable/hmsongsterr"/>

        
    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_view_header"
        app:menu="@menu/nav_view_items">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>